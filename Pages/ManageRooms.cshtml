@page
@model Rezerwacja.Pages.ManageRoomsModel
@{
}

<div>
    <h1>Add Room</h1>
    <form method="post" asp-page-handler="AddRoom">
        <input asp-for="room.MaxPeople" type="text" placeholder="Max people" required/>
        <select class="custom-select" asp-for="category" required multiple>
            <option value="">Select a category</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Name">@category.Name</option>
            }
        </select>
        <input asp-for="room.Equipment" type="text" placeholder="Wyposazenie" required/>
        <input type="hidden" name="buildID" value="@Model.buildid" />
        <button type="submit">Add</button>
    </form>
</div>

<br />
<br />

<div>
    <h1>Add Category</h1>
    <form method="post" asp-page-handler="AddCategory">
        <input asp-for="newCategory" type="text" placeholder="new Category" required />
        <button type="submit" name="buildID" value="@Model.buildid">Add</button>
    </form>
</div>

<table class="table">
    <tr>
        <th>Number</th>
        <th>Max people</th>
        <th>Categories</th>
        <th>Equipment</th>
    </tr>
    @foreach (var room in Model.rooms)
    {
        <tr>
            <td>@room.Id</td>
            <td>@room.MaxPeople</td>

            <td>
                @room.Category
            </td>
            <td>
                @room.Equipment
            </td>
        </tr>
    }
</table>