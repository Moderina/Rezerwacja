@page
@model Rezerwacja.Pages.AdminApproveModel
@{
}
<h2 class="text-center">Zatwierdź rezerwacje</h2>

<table class="table">
    <tr>
        <th>Nr uzytkownika</th>
        <th>Data</th>
        <th>Nr sali</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var reservation in Model.Reservations)
    {
        <tr>
            <td>@reservation.UserId</td>
            <td>@reservation.StartTime.Date</td>
            <td>@reservation.RoomId</td>
            <td>
                <form method="post" asp-page-handler="Approve">
                    <input type="hidden" name="id" value="@reservation.Id" />
                    <button type="submit">Zatwierdz</button>
                </form>
            </td>
            <td>
                <form method="post" asp-page-handler="Cancel">
                    <input type="hidden" name="id" value="@reservation.Id" />
                    <button type="submit">Odrzuc</button>
                </form>
            </td>
        </tr>


    }
</table>